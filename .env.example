# OpenAI API (for embeddings and LLM)
OPENAI_API_KEY=your_openai_api_key_here

# Sui Configuration
SUI_NETWORK=testnet
SUI_PRIVATE_KEY=your_sui_private_key_here
SUI_RPC_URL=https://fullnode.testnet.sui.io:443

# Sui Vector Registry (Hybrid Architecture - Optional but Recommended)
# Deploy the contract first (see DEPLOYMENT.md), then add these:
VECTOR_REGISTRY_PACKAGE_ID=your_package_id_after_deployment
VECTOR_REGISTRY_OBJECT_ID=your_registry_object_id_after_creation

# Walrus Configuration
WALRUS_PUBLISHER_URL=https://publisher.walrus-testnet.walrus.space
WALRUS_AGGREGATOR_URL=https://aggregator.walrus-testnet.walrus.space

# Optional: Local LLM (if not using OpenAI)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# Vector DB Configuration
VECTOR_DB_PATH=./data/vector-store

# Event Sync (Optional - disable real-time sync across instances)
# DISABLE_AUTO_SYNC=true

# OpenAI Chat Model (Optional - defaults to gpt-4o-mini)
# OPENAI_CHAT_MODEL=gpt-4o-mini
